{{!-- PUT IN STUFF TO BE SHOVED INTO MAIN  --}}

<div class="container">
    <h1 style="text-align: center;">Burger</h1>
    <div class="row">
        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                {{#unless devourced}}
                {{!-- html to show up if the burgers haven't been devoured --}}
                {{!-- {{> cats/cat-block sleep=true}} --}}
                <li class="not-devoured">{{this.id}}. {{this.burger_name}}
                    <button class="devoured btn btn-primary btn-sm " data-id="{{this.id}}" type="button">Devour
                        It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <ul>
                {{#each cats}}
                {{#if devourced}}
                <li class="devoured"> {{this.id}}. {{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>



    <div class="row justify-content-center">
        <div class="col justify-content-center">
            <form class="create-form" id="newBurger" style="justify-content: center;">
                <div class="form-group">
                    <input type="text" id="nb" name="burger_name">
                    <button type="submit" class="btn btn-primary" id="addButton">Add Burger</button>
                </div>
            </form>
        </div>
    </div>
</div>